<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.About_us_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="ABOUT US"
            android:textColor="@color/black"

            android:textSize="30sp"
            android:textStyle="bold"

            android:gravity="center"


            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="National Rural Livelihoods Mission(NRLM) was launched by the Ministry of Rural Development(MoRD), Government of India in June 2011.\n \nAided in part through investment support by the World Bank,the Mission aims at creating efficient and effective institutional platforms of the rural poor, enabling them to increase household income through sustainable livelihood enhancements and improved access to financial services. "
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:textColor="@color/black"

            />


    </LinearLayout>


</FrameLayout>